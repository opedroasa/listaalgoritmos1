Questão 20:


      int main()
      {
          int numero;
      
          printf("Digite um numero de 4 digitos: ");
          scanf("%i",&numero);
      
          int milhar,centena,dezena,unidade;
      
          milhar = numero/1000;
          centena = ((numero%1000)/100);
          dezena = ((numero%100)/10);
          unidade = (numero%10);
      
          printf("\nMilhar: %i\nCentena: %i\nDezena: %i\nUnidade: %i\n",milhar,centena,dezena,unidade);
      
          return 0;
      }
