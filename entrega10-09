          scanf("%i", &var2);
      
          printf("Digite a quantidade de garrafas de 2L: ");
          scanf("%i", &var3);
      
      
          float l350 = 0.350*var1;
          float g600 = 0.600*var2;
          float g2 = 2*var3;
      
          printf("\nA quantidade total de litros comprada foi de: %.2f\n", (l350+g600+g2));
      
          return 0;
      }


