Questão 1:


      int main()
    {
    
        float casaDeFrente;
        float casaDeLado;
        float custoMetro;
    
    
               printf("Quantos metros o terreno possuiu de frente: ");
               scanf("%f", &casaDeFrente);
               printf("Quantos metros o terreno possuiu de lateral: ");
               scanf("%f", &casaDeLado);
               printf("Informe o valor do metro quadrado: ");
               scanf("%f", &custoMetro);
    
          float metroQuadrado = (casaDeFrente * casaDeLado);
    
               printf("\nArea total do terreno de %.2f mts de frente com %.2f mts de lateral e: %.2f mts\n",
                      casaDeFrente, casaDeLado, metroQuadrado);
               printf("O valor deste terreno e: %.2f\n\n", (metroQuadrado * custoMetro) );
       
        return 0;
    }


Questão 2:


      int main()
      {
          float salarioMin;
          printf("Informe o valor do salario minino: ");
          scanf("%f", &salarioMin);
      
          float salarioFun;
          printf("Informe o valor do salario do funcionario: ");
          scanf("%f", &salarioFun);
      
          float salario = (salarioFun / salarioMin);
          printf("\nO funcionario recebe %.1f salarios minimos!\n", salario);
            
          return 0;
      }


Questão 3:


      int main()
      {
      
         float nota1;
         float nota2;
         float nota3;
      
         printf("Informe a nota 1: ");
         scanf("%f", &nota1);
      
         printf("Informe a nota 2: ");
         scanf("%f", &nota2);
      
         printf("Informe a nota 3: ");
         scanf("%f", &nota3);
      
      
         float media = (nota1 * 1) + (nota2 * 2) + (nota3 * 3);
         float mediap = media/6;
      
         printf("\nA media ponderada das notas %.2f, %.2f, %.2f e: %.2f", nota1, nota2, nota3, mediap);
      
             return 0;
      }


Questão 4:


      int main()
      {
         int num1;
         int soma;
         int mult;
         float divi;
         int sub;
      
             printf("Informe o numero para o calculo da tabuada: ");
             scanf("%d", &num1);
             printf("\nTabuada do + e - para o numero %d:", num1);
      
                      for(int num2 = 0; num2<10; num2++)
                      {
                      soma = num1 + num2;
                      sub = num1 - num2;
                      printf("\n%d + %d = %d     ", num1,num2, soma);
                      printf("%d - %d = %d", num1,num2,abs(sub));
                  }
      
             printf("\n\nTabuada do * e / para o numero %d: ", num1);
      
                      for(float num2 = 0; num2<10; num2++)
                      {
      
                      mult = num1 * num2;
                      divi = num1 / num2;
                      printf("\n%d * %1.f = %d     ", num1,num2, mult);
                      printf("%d / %1.f = %.2f", num1,num2,divi);
      
                      }
      
             printf("\n");
      
          return 0;
      }


