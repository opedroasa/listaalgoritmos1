Questão 8:


      int main()
      {
          float sal, salNew,fgts,inss;
          fgts = 0.08;
          inss = 0.11;
      
      
                  printf("Informe o salario: R$");
                  scanf("%f", &sal);
      
                  printf("\nSalario Inicial: R$ %.2f", sal);
      
                  salNew = sal+(sal*0.15);
      
                  printf("\nSalario Reajustado: R$%.2f", salNew);
                  printf("\nDesconto 11%% INSS: R$%.2f", (salNew*inss));
                  printf("\nDesconto 8%% FGTS: R$%.2f", (salNew*fgts));
                  printf("\nTotal de descontos: R$%.2f", (salNew*inss)+(salNew*fgts));
                  printf("\nSalario Final: R$%.2f\n", (salNew-((salNew*inss)+(salNew*fgts))));
      
      
          return 0;
      }


Questão 9:


      int main()
      {
      
          int trap1, trap2, trap3;
          int qua;
          int ret1, ret2;
          int cir;
          int tri1, tri2;
      
                  printf("Area do trapezio:\n");
                  printf("Informe o valor da base maior: ");
                  scanf("%i", &trap1);
                  printf("Informe o valor da base menor: ");
                  scanf("%i", &trap2);
                  printf("Informe o valor da altura: ");
                  scanf("%i", &trap3);
                  printf("A area do trapezio e: %.2f\n\n", (float)((((trap1+trap2)*trap3)/2)));
      
                  printf("Area do quadrado: \n");
                  printf("Informe o valor de um dos lados: ");
                  scanf("%i", &qua);
                  printf("A area do quadrado e: %.2f \n\n", (float)qua*4);
      
                  printf("Area do retangulo: \n");
                  printf("Informe o valor da largura: ");
                  scanf("%i", &ret1);
                  printf("Informe o valor da altura: ");
                  scanf("%i", &ret2);
                  printf("A area do retangulo e: %.2f\n\n", (float)(ret1*ret2));
      
                  printf("Area do circulo: \n");
                  printf("Informe o valor do raio: ");
                  scanf("%i", &cir);
                  printf("A area do circulo e: %.2f\n\n", (float)((cir*cir)*3.14));
      
                  printf("Area do triangulo: \n");
                  printf("Informe o valor da base: ");
                  scanf("%i", &tri1);
                  printf("Informe o valor da altura: ");
                  scanf("%i", &tri2);
                  printf("A area do triangulo e: %.2f\n", (float)(tri1*tri2)/2);
      
          return 0;
      }


Questão 10:


      int main()
      {
          int anoNasc;
          int anoAtual;
      
      
          printf("Digite seu ano de nascimento: ");
          scanf("%i", &anoNasc);
      
         printf("Digite ano em que estamos: ");
          scanf("%i", &anoAtual);
      
         int idade = anoAtual-anoNasc;
      
         printf("\nA idade dessa pessoa em: \n");
         printf("Anos: %i\n", idade);
         printf("Meses: %i\n", (idade*12));
         printf("Dias: %i\n", (idade*12*30));
         printf("Semanas: %i\n", (idade*12*4));
      
          return 0;
      
      }


